<p id="notice"><%= notice %></p>

<h1>Listing Credit Cards</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Recno</th>
      <th>Code</th>
      <th>Vendor description</th>
      <th>Balance transfer</th>
      <th>Has balance transfer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.recno %></td>
        <td><%= credit_card.code %></td>
        <td><%= credit_card.vendor_description %></td>
        <td><%= credit_card.balance_transfer %></td>
        <td><%= credit_card.has_balance_transfer %></td>
        <td><%= link_to 'Show', credit_card, :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card), :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @credit_cards %>

<br>

<%= link_to 'New Credit card', new_credit_card_path %>
